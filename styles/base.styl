$white = #FFF
$black = #000
$blue = #4386fc
$grey = #a3a3a3

body, html
  background $white
  height 100%
  width 100%
  font-family 'Roboto', sans-serif
  font-weight 300

#wrapper
  width 300px
  height 600px
  border 1px solid $black
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  position relative
  //display none
  cursor pointer
  //-webkit-box-shadow: 0px 0px 1px 1px #000, 0px 0px 3px 3px rgba(0, 0, 0, 0.75);
  //box-shadow: 0px 0px 1px 1px #000, 0px 0px 3px 3px rgba(0, 0, 0, 0.75);

.envelope-container
  visibility visible
  

figure img
  position absolute
  top 50%
  left 50%
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  -ms-transform translate(-50%, -50%)
  -o-transform translate(-50%, -50%)
  transform translate(-50%, -50%)
  z-index 1

//figure
//  border 1px solid black

figcaption
  margin 0
  color #000
  background $white
  width 100%
  text-align center
  position absolute
  top 75%
  left 50%
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  -ms-transform translate(-50%, -50%)
  -o-transform translate(-50%, -50%)
  transform translate(-50%, -50%)
  text-decoration: none

  a
    text-decoration none
    color $black
    display block
    font-family 'Roboto', sans-serif
    font-weight 300



