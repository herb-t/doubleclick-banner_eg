$white = #FFF
$black = #000
$blue = #4386fc
$grey = #a3a3a3

body, html
  background $white
  height 100%
  width 100%
  font-family 'Roboto', sans-serif
  font-weight 300

#wrapper
  width 300px
  height 600px
  border 1px solid $black
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  position relative
  //display none
  cursor pointer
  
#catch-all
  width 100%
  height 100%  

.envelope-back
  z-index 1 

.envelope-front
  top 51% !important
  z-index 5

.envelope-container
  visibility visible  
  
  img
    position absolute
    top 46%
    left 50%
    -webkit-transform translate(-50%, -50%)
    -moz-transform translate(-50%, -50%)
    -ms-transform translate(-50%, -50%)
    -o-transform translate(-50%, -50%)
    transform translate(-50%, -50%)
    
  .mail-container
    position absolute
    overflow hidden
    top 46%
    left 50%
    z-index 3
    width 100%
    height 30%  
    -webkit-transform translate(-50%, -50%)
    -moz-transform translate(-50%, -50%)
    -ms-transform translate(-50%, -50%)
    -o-transform translate(-50%, -50%)
    transform translate(-50%, -50%)
    
    .mail-wine,
    .mail-baking, .mail-tea,
    .mail-icecream, .mail-metal, .mail-sneakers
      z-index 4
      top 100%
      
span
  position absolute
  top 67%
  top 72%
  left 50%
  z-index 3
  letter-spacing 0.25px 
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  -ms-transform translate(-50%, -50%)
  -o-transform translate(-50%, -50%)
  transform translate(-50%, -50%)
  visibility hidden
  color $grey
  font-family 'Roboto', sans-serif
  font-weight 300
  
