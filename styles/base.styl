$white = #FFF
$black = #000
$blue = #4386fc
$grey = #a3a3a3

$font = font-family 'Roboto', sans-serif

body, html
  background $white
  height 100%
  width 100%
  font-family $font
  font-weight 300

#wrapper
  width 300px
  height 600px
  border 1px solid $black
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  position relative
  //display none
  cursor pointer
  
.centerer
  position absolute
  top 50%
  left 50%
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  -ms-transform translate(-50%, -50%)
  -o-transform translate(-50%, -50%)
  transform translate(-50%, -50%)
  
#catch-all
  width 100%
  height 100%  

.envelope-back
  z-index 1 

.envelope-front
  z-index 5

.envelope-container
  visibility visible
  opacity 1 
  
  img
    top 46%
        
  .mail-container
    overflow hidden
    top 46%
    z-index 3
    width 100%
    height 30%  
    
    .mail-wine,
    .mail-baking, .mail-tea,
    .mail-icecream, .mail-metal, .mail-sneakers
      z-index 4
      top 100%
      
  span
    top 72%
    z-index 3
    letter-spacing 0.25px 
    visibility hidden
    opacity 0
    color $grey
    font-family $font
    font-weight 300

// -------------------------------------
//   End Frame
// -------------------------------------

.end-frame
  visibility hidden
  width 180px
  text-align center
  top 60%

  h1
    font-size 21px
    color $grey
    font-family $font
    font-weight 400
    position relative
    top 20px

  p
    font-size 13px
    letter-spacing 0.25px 
    color $grey
    font-family $font
    margin-bottom 20px
    position relative
    top 20px

  a
    text-decoration none
    color $white
    background $blue
    padding 6px 25px
    font-size 13px
    border-radius 3px
    position relative
    top 20px
    letter-spacing 0.25px 
    
    &:hover
      background darken($blue, 10%)



