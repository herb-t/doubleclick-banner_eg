// -------------------------------------
//   End Frame
// -------------------------------------
.end-frame
  visibility hidden
  width 180px
  position absolute
  text-align center
  top 60%
  left 50%
  -webkit-transform translate(-50%, -50%)
  -moz-transform translate(-50%, -50%)
  -ms-transform translate(-50%, -50%)
  -o-transform translate(-50%, -50%)
  transform translate(-50%, -50%)


  h1
    font-size 21px
    color $grey
    font-family 'Roboto', sans-serif
    font-weight 400
    position relative
    top 20px

  p
    font-size 13px
    letter-spacing 0.25px 
    color $grey
    font-family 'Roboto', sans-serif
    margin-bottom 20px
    position relative
    top 20px

  a
    text-decoration none
    color $white
    background $blue
    padding 6px 25px
    font-size 13px
    border-radius 3px
    position relative
    top 20px
    letter-spacing 0.25px 
    
    &:hover
      background darken($blue, 10%)



